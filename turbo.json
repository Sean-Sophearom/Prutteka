{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "test": {},
    "dev": {
      "cache": false,
      "env": [
        "MONGO_URI",
        "PORT",
        "NEXT_PUBLIC_API_KEY",
        "NEXT_PUBLIC_AUTH_DOMAIN",
        "NEXT_PUBLIC_PROJECT_ID",
        "NEXT_PUBLIC_STORAGE_BUCKET",
        "NEXT_PUBLIC_MESSAGING_SENDER_ID",
        "NEXT_PUBLIC_APP_ID"
      ]
    },
    "storybook": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    }
  }
}
